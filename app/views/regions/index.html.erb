<div class="header">
  <p>Search for apartments, jobs, and classifieds</p>
</div>
<div>
  <div id="map-canvas"></div>
  <div class="greg">
    <%= image_tag("craigs-list.png") %>
    <p>Hi, I'm Greg. This is my list, take a look around.</p>
  </div>
</div>

<% if signed_in? %>
  <% if current_user.admin? %>
    <h4>Add a new region</h4>
      <%= render "new_region", region: @region %>
  <% end %>
<% end %>

<%= javascript_tag do %>
  var regions = <%= raw @regions.to_json %>;
<% end %>

<h4>Regions</h4>
<%= render @regions %>
