<div id="post">
  <h3><%= @post.category.region.name %>/<%= @post.category.title %></h3>
  <h4><%= @post.title %></h4>
  <p><%= @post.body %></p>
  <%= image_tag @post.url %>
  <span class="timestamp">Posted <%= time_tag @post.created_at %></span>
<% if signed_in?%>
  <%= button_to "Mark as spam", [@post, :spams] %>
  <% if current_user.can_delete?(@post) %> 
    <%= button_to "Delete post", @post, method: :delete %>

    <%= form_for @post do |form| %>
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>
      <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
      </div>
      <div>
        <%= form.label "Image URL" %>
        <%= form.text_field :url %>
      </div>
        <%= form.submit "edit post" %>
    <% end %>

    <%= link_to "Edit post", "#", id: "edit-button" %>
  <% end %>
<% end %>
</div>
